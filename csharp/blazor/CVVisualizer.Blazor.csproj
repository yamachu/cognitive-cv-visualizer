<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="5.0.0" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="5.0.0" PrivateAssets="all" />
    <PackageReference Include="System.Net.Http.Json" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\core\CVVisualizer.Core.csproj" />
  </ItemGroup>

  <Target Name="CustomAfterRestore" AfterTargets="Restore">
    <Exec Command="pushd ../../ ; npm install ; popd" />
  </Target>

  <Target Name="CustomAfterBuild" AfterTargets="Build">
    <Exec Command="IS_BLAZOR=true DIST=./wwwroot node ../../build.js production" />
  </Target>

</Project>
